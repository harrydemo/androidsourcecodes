<greendroid.widget.itemview.DrawableItemView
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="?attr/gdDrawableItemViewStyle"
	
	android:layout_height="wrap_content"
	android:minHeight="?attr/gdItemViewPreferredHeight"
	android:padding="?attr/gdItemViewPreferredPaddingLeft">

	<ImageView
		android:id="@+id/gd_drawable"
		style="?attr/gdDrawableItemViewStyleDrawable"

		android:layout_gravity="center_vertical" />

	<TextView
		android:id="@+id/gd_text"
		style="?attr/gdDrawableItemViewStyleText"
		
		android:layout_width="0dp"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		
		android:singleLine="true"
		android:gravity="center_vertical" />

</greendroid.widget.itemview.DrawableItemView>
