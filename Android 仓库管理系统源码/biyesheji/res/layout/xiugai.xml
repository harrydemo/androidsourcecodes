<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/regeist">
  <TextView 
 android:id="@+id/shangpmt"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:text="原始密码："
 android:layout_marginLeft="70sp"
 android:layout_marginTop="30sp"
 android:paddingTop="5sp"
 android:textColor="@android:color/black"
 android:textAppearance="?android:attr/textAppearanceLarge"/>
 <EditText 
 android:id="@+id/jiumima"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:hint="请输入原始密码"
 android:layout_toRightOf="@id/shangpmt"
 android:layout_alignTop="@id/shangpmt"/>
  <TextView 
 android:id="@+id/shangpgt"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:text="新的密码："
 android:layout_marginLeft="70sp"
 
 android:paddingTop="5sp"
 android:textColor="@android:color/black"
 android:layout_below="@id/jiumima"
 android:textAppearance="?android:attr/textAppearanceLarge"/>
 <EditText 
 android:id="@+id/xinmima"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:hint="请输入新的密码"
 android:password="true"
 android:layout_toRightOf="@id/shangpgt"
android:layout_below="@id/jiumima"/>
   <TextView 
 android:id="@+id/shangpjt"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:text="确认密码："
 android:layout_marginLeft="70sp"
 
 android:paddingTop="5sp"
 android:textColor="@android:color/black"
 android:layout_below="@id/xinmima"
 android:textAppearance="?android:attr/textAppearanceLarge"/>
 <EditText 
 android:id="@+id/querenmima"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:hint="请输入新的密码"
 android:password="true"
 android:layout_toRightOf="@id/shangpjt"
android:layout_below="@id/xinmima"/>
<Button 
android:id="@+id/baocun"
android:layout_width="110sp"
android:layout_height="wrap_content"
android:text="保存"
android:layout_below="@id/querenmima"
android:layout_marginLeft="90sp"
android:onClick="save"/>
 <Button 
android:id="@+id/back"
android:layout_width="110sp"
android:layout_height="wrap_content"
android:text="返回"
android:layout_below="@id/querenmima"
android:layout_toRightOf="@id/baocun"
android:layout_marginLeft="20sp"
android:onClick="back"/>   
</RelativeLayout>
