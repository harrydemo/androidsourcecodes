<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true">
    <shape>
        <corners android:radius="12dp" />  
        <gradient android:startColor="#BC8788"
            	  android:centerColor="#8C3731"
            	  android:endColor="#C16055"
            	  android:angle="270" />
    </shape>
</item>   
<item>
    <shape>
        <corners android:radius="12dp" />  
		<gradient android:startColor="#BC6768"
            	  android:centerColor="#8C1711"
            	  android:endColor="#C14035"
            	  android:angle="270" />
		<stroke  
        android:width="1dp"  
        android:color="#000000" />
    </shape>
</item>   
</selector>