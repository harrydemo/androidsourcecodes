<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    >
    <!-- title -->
    <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@android:color/black"
			android:textStyle="bold"
			android:textSize="20sp"
			android:layout_gravity="center"
			android:padding="10dip"
			android:text="@string/hello"/>
	<!-- title bar -->	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:background="@color/gray"/>
		
	<!-- content -->
	<LinearLayout
		android:layout_marginTop="10dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_horizontal">
		<TextView
			android:id="@+id/playTitle_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="40dip"
			android:text="1 out of all"
			android:textColor="@android:color/black"
			android:paddingRight="20dip"/>
		<ProgressBar
			android:id="@+id/ProgressBar_playing"
			style="?android:attr/progressBarStyleHorizontal"
			mce_style="?android:attr/progressBarStyleHorizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginRight="40dip"
			android:visibility="visible"
			android:progressDrawable="@drawable/color"/>
	</LinearLayout>
	
	
	<LinearLayout
		android:layout_marginTop="20dip"
		android:layout_marginBottom="20dip"
		android:layout_marginLeft="40dip"
		android:layout_marginRight="40dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_horizontal"
		
		>
		<ImageView
			android:id="@+id/pre_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="35dip"
			android:layout_gravity="center_vertical"
			android:src="@drawable/back"/>
		<ImageView
			android:id="@+id/pause_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginRight="35dip"
			android:src="@drawable/play"/>
		<ImageView
			android:id="@+id/next_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:src="@drawable/next"/>
	</LinearLayout>
	<Spinner 
			android:id="@+id/chapter_spinner"
			android:layout_width="200sp"
			android:layout_height="35sp"
			android:layout_gravity="center_horizontal"
			android:prompt="@string/spanner_title"
			/>
			
	<!-- yoga backgroud_img -->
	
	<ImageView
		android:id="@+id/yoga_img"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="1dip"
		android:layout_marginLeft="40dip"
		android:layout_marginRight="40dip"
		android:layout_marginBottom="5dip"
		android:layout_gravity="center"
		android:src="@drawable/default_sunset"
		/>

</LinearLayout>
