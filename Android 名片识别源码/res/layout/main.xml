<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#fff">
	<ImageView android:src="@drawable/logo_sharp"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginTop="10px" android:layout_marginLeft="10px"
		android:layout_marginBottom="10px" />
	<ImageView android:src="@drawable/banner_text"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center">
		<ImageButton android:src="@drawable/shooter" android:id="@+id/btn_rec_from_camera"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<ImageButton android:src="@drawable/nvtv" android:id="@+id/btn_read_from_sdcard"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center">
		<ImageButton android:src="@drawable/contact"
			android:id="@+id/btn_contact" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<ImageButton android:src="@drawable/setting" android:id="@+id/btn_setting"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		
	</LinearLayout>
	<ImageView android:src="@drawable/copyright_text"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="right" android:layout_marginRight="5px" />
</LinearLayout>
