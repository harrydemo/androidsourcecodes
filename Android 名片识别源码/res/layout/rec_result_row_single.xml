<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="horizontal">
	<Button android:id="@+id/item_type" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentLeft="true" />
	<ImageButton android:id="@+id/btn_remove_item"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:background="@drawable/minus" android:layout_alignParentRight="true"
		android:layout_marginTop="5dip" android:layout_marginRight="10dip" />
	<EditText android:id="@+id/item_value" android:layout_width="0dip"
		android:layout_height="wrap_content" android:layout_toLeftOf="@id/btn_remove_item"
		android:layout_toRightOf="@id/item_type" android:layout_marginRight="10dip"
		android:layout_marginLeft="5dip" />
</RelativeLayout>
