<resources>

    <style name="WidgetBackground">
        <item name="android:background">@drawable/widget_bg</item>
    </style>



    <style name="Text">
    </style>

    <style name="Text.Loading">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/semi_white</item>
    </style>

    <style name="Text.Location">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Day">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/semi_white</item>
    </style>

    <style name="Text.Conditions">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.High">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Low">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/semi_white</item>
    </style>



    <style name="Text.Location.Light">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Day.Light">
        <item name="android:textColor">@color/semi_black</item>
    </style>

    <style name="Text.Conditions.Light">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.High.Light">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Low.Light">
        <item name="android:textColor">@color/semi_black</item>
    </style>


    <style name="DetailsListView" parent="@android:style/Widget.ListView.White">
        <item name="android:background">@color/white</item>
        <item name="android:cacheColorHint">@color/white</item>
    </style>

    <style name="DetailsEmpty">
        <item name="android:padding">20dip</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
