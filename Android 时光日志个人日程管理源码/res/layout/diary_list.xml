<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:background="@drawable/background" android:layout_height="fill_parent">

	<LinearLayout android:orientation="horizontal"
		android:background="@color/drakgreen" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:layout_width="fill_parent" android:id="@+id/select_date"
			android:gravity="center" android:textSize="30dp" android:textColor="@color/black" 
			android:layout_gravity="center" android:layout_height="wrap_content" />
	</LinearLayout>


	<ListView android:id="@+id/android:list" android:scrollbars="vertical"
		android:cacheColorHint="@color/hit_color" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_weight="2.0" />
	<TextView android:id="@+id/android:empty"
		android:layout_width="fill_parent" android:textSize="20dp" 
		android:layout_height="wrap_content" android:text="@string/no_diary"
		android:textColor="@color/black" android:layout_weight="1.0" />

	<TextView android:id="@+id/thoughts" android:textColor="@color/red"
		android:scrollbars="vertical" android:layout_width="fill_parent" 
		android:textSize="20dp" android:height="80dip" android:layout_height="wrap_content" />

</LinearLayout>
