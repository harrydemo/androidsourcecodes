<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:background="@drawable/background" android:layout_height="fill_parent">

	<LinearLayout android:orientation="horizontal"
		android:background="@color/drakgreen" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:layout_width="wrap_content" android:id="@+id/select_date"
			android:gravity="center" android:textSize="30dp"
			android:layout_height="wrap_content" android:layout_weight="1.0" />
	</LinearLayout>

	<EditText android:id="@+id/introspection" android:gravity="top"
		android:layout_width="fill_parent" android:layout_height="wrap_content" 
		android:height="150dp" />

	<Button android:id="@+id/confirm" android:text="@string/confirm"
		android:width="100dp" android:layout_width="wrap_content"
		android:gravity="center" android:layout_height="wrap_content" />

</LinearLayout>
