<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
	<ImageView android:id="@+id/icon" android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:layout_marginRight="6.0dip"
		android:layout_alignParentTop="true" android:layout_alignParentBottom="true"
	/>
	<TextView android:textAppearance="?android:textAppearanceMedium"
		android:id="@+id/treetext" android:gravity="center_vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:textColor="#ffffff" android:singleLine="true"
		android:layout_toRightOf="@id/icon" android:layout_alignParentTop="true"
		android:layout_alignParentBottom="true" android:text="@string/app_textview_example"
	/>
</RelativeLayout>
