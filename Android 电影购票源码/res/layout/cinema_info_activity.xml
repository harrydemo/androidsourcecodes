<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="horizontal">
		<Button android:text="@string/ret" android:id="@+id/ci_ret"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</Button>
		<TextView android:text="影院资料"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="20px"
			android:layout_marginTop="1px">
		</TextView>
		<Button android:text="影院地图" android:id="@+id/ci_searchmap"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</Button>



	</LinearLayout>
	<ImageView android:layout_width="fill_parent"
		android:src="@drawable/default_image" android:layout_marginTop="5px"
		android:layout_height="wrap_content" />
	<ListView android:id="@+id/filmListView"
		android:layout_width="fill_parent" android:layout_height="270px" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="horizontal">
		<Button android:text="@string/hot_film"
			android:id="@+id/hot_film" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</Button>
		<Button android:text="@string/myhapiao"
			android:id="@+id/myhapiao" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</Button>
		<Button android:text="@string/all_films"
			android:id="@+id/all_films" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</Button>
	</LinearLayout>
</LinearLayout>
