<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="horizontal">
		<TextView android:id="@+id/csa_filmname"
			android:text="@string/selcinema" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="30px"
			android:layout_marginTop="1px">
		</TextView>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal" android:layout_marginTop="10px"
		android:orientation="horizontal">
		<TextView android:text="省份:" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="20px">
		</TextView>
		<Spinner android:id="@+id/csa_select_province"
			android:layout_width="200px"
			android:prompt="@string/csa_proviince_promote"
			android:layout_height="wrap_content"
			android:drawSelectorOnTop="false" android:textSize="8px" />
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal" android:layout_marginTop="10px"
		android:orientation="horizontal">
		<TextView android:text="城市:" android:layout_marginTop="10px"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="20px" />
		<Spinner android:id="@+id/csa_select_city"
			android:layout_width="200px"
			android:prompt="@string/csa_city_promote"
			android:layout_height="wrap_content" android:layout_marginTop="10px"
			android:drawSelectorOnTop="false" android:textSize="8px" />
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal" android:layout_marginTop="10px"
		android:orientation="horizontal">
		<TextView android:text="影院:" android:layout_marginTop="10px"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="20px" />
		<Spinner android:id="@+id/csa_select_cinema"
			android:layout_width="200px"
			android:prompt="@string/csa_cinema_promote"
			android:layout_height="wrap_content" android:layout_marginTop="10px"
			android:drawSelectorOnTop="false" android:textSize="8px" />
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_marginTop="10px" android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="horizontal">
		<Button android:text="@string/sure"
			android:id="@+id/cinema_sure" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</Button>
		<Button android:text="@string/ret"
			android:id="@+id/cinema_return" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</Button>
	</LinearLayout>
</LinearLayout>
