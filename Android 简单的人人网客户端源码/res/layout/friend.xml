<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	
	<ImageView android:id="@+id/head" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:paddingRight="6dip" />

	<TextView
		android:id="@+id/name" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
		android:gravity="right" android:paddingLeft="6dip"
		android:paddingRight="20dip" android:minHeight="44dip" />
</LinearLayout>
