<?xml version="1.0" encoding="utf-8"?>
<!-- 单程标签 -->
<TabHost
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@android:id/tabhost"
android:background="@drawable/background"
android:layout_width="match_parent"
android:layout_height="match_parent" >

<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical" >

<TabWidget
android:id="@android:id/tabs"
android:layout_width="match_parent"
android:layout_height="wrap_content" >

</TabWidget>

<FrameLayout
android:id="@android:id/tabcontent"
android:layout_width="match_parent"
android:layout_height="match_parent" >

<LinearLayout
android:id="@+id/tab1"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical" >
<LinearLayout
android:id="@+id/startcityline"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="horizontal" >
<TextView
android:id="@+id/textview"
android:textSize="20sp"
android:textColor="@android:color/background_dark"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="出发城市:" />
<Spinner
android:id="@+id/go_selectcity"    
android:layout_width="fill_parent"
android:hint="上海"
android:layout_height="wrap_content"/> 
 
</LinearLayout>
 

<LinearLayout
android:id="@+id/startcityline1"
android:layout_width="fill_parent"
android:layout_marginTop="19dip"
android:layout_height="wrap_content"
android:orientation="horizontal" >
<TextView
android:id="@+id/textview"
android:textSize="20sp"
android:textColor="@android:color/background_dark"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="目的城市:" />
<Spinner
android:id="@+id/setoffcity"     
android:layout_width="fill_parent"
android:layout_height="wrap_content"/>  
</LinearLayout>



<LinearLayout
android:id="@+id/startcityline2"
android:layout_width="fill_parent"
android:layout_marginTop="19dip"
android:layout_height="wrap_content"
android:orientation="horizontal" >
<TextView
android:id="@+id/textview"
android:textSize="20sp"
android:textColor="@android:color/background_dark"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="启程日期:" />
<EditText
android:id="@+id/setoff_date"     
android:layout_width="200dip"
android:layout_height="wrap_content"/>
<Button
android:id="@+id/setoffdate_btn"     
android:layout_width="30dip"
android:layout_height="wrap_content"   
 android:layout_marginRight="11dip"
 android:text=""   
    
    />  
</LinearLayout>


<LinearLayout
android:id="@+id/startcityline2"
android:layout_width="fill_parent"
android:layout_marginTop="19dip"
android:layout_height="wrap_content"
android:orientation="horizontal" >
<TextView
android:textSize="20sp"
android:textColor="@android:color/background_dark"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="航空公司:" />
<Spinner
  
android:layout_width="fill_parent"
android:id="@+id/airport_company"
android:layout_height="wrap_content"/>  
</LinearLayout>

<Button
android:id="@+id/select_btn"     
android:layout_width="fill_parent"    
android:layout_height="wrap_content"    
android:text="查询"
android:layout_marginTop="15dip"
android:background="@drawable/blue_button" />
</LinearLayout>

<!-- 往返标签 -->
<LinearLayout
android:id="@+id/tab2"
android:layout_width="match_parent"
android:orientation="vertical"
android:layout_height="match_parent" >
<LinearLayout
android:id="@+id/startcityline3"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="horizontal" >
 <TextView
android:id="@+id/goes"
android:textSize="20sp"
android:textColor="@android:color/background_dark"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="出发城市:" />
 
<Spinner
android:id="@+id/return_selectcity"     
android:layout_width="fill_parent"
android:layout_height="wrap_content"/>  
</LinearLayout> 
 
<LinearLayout
android:id="@+id/startcityline4"
android:layout_width="fill_parent"
android:layout_marginTop="19dip"
android:layout_height="wrap_content"
android:orientation="horizontal" >
<TextView
android:id="@+id/textview"
android:textSize="20sp"
android:textColor="@android:color/background_dark"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="目的城市:" />
<Spinner
android:id="@+id/go_setoffcity"     
android:layout_width="fill_parent"
android:layout_height="wrap_content"/>  
</LinearLayout>

<LinearLayout
android:id="@+id/startcityline2"
android:layout_width="fill_parent"
android:layout_marginTop="19dip"
android:layout_height="wrap_content"
android:orientation="horizontal" >
<TextView
android:id="@+id/textview"
android:textSize="20sp"
android:textColor="@android:color/background_dark"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="启程日期:" />
<EditText
android:id="@+id/setoff_date"     
android:layout_width="200dip"
android:layout_height="wrap_content"/>
<Button 
android:layout_width="30dip"
android:layout_height="wrap_content"   
android:layout_marginRight="11dip"
android:text=""/>   
</LinearLayout>

<LinearLayout
android:id="@+id/startcityline2"
android:layout_width="fill_parent"
android:layout_marginTop="19dip"
android:layout_height="wrap_content"
android:orientation="horizontal" >
<TextView
android:id="@+id/textview"
android:textSize="20sp"
android:textColor="@android:color/background_dark"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="返回日期:" />
<EditText
android:id="@+id/return_date"     
android:layout_width="200dip"
android:layout_height="wrap_content"/>
<Button
android:id="@+id/return_date_btn"     
android:layout_width="30dip"
android:layout_height="wrap_content"   
android:layout_marginRight="11dip"
android:text=""/>  
</LinearLayout>

<LinearLayout
android:id="@+id/startcityline2"
android:layout_width="fill_parent"
android:layout_marginTop="19dip"
android:layout_height="wrap_content"
android:orientation="horizontal" >
<TextView
android:textSize="20sp"
android:textColor="@android:color/background_dark"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="航空公司:" />
<Spinner
android:layout_width="fill_parent"
android:id="@+id/airport_company"
android:layout_height="wrap_content"/>  
</LinearLayout>

<Button
android:id="@+id/return_select_btn"     
android:layout_width="fill_parent"    
android:layout_height="wrap_content"    
android:text="查询"
android:layout_marginTop="10dip"
android:background="@drawable/blue_button" />




</LinearLayout>


</FrameLayout>
</LinearLayout>
</TabHost>

