<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    	
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
		<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"		
			android:id="@+id/button_table"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" >
			<TableRow>
				<TextView
            		android:text="@string/key_date_name"
            		android:textColor="@color/white"
            		android:background="@color/blue"            	
            		android:padding="1dip" />
        		<TextView
            		android:id="@+id/show_log_date_value"
            		android:padding="1dip" />
    		</TableRow>
    		<TableRow>
    			<TextView
    				android:height="3dip" />
    		</TableRow>
			<TableRow>
				<TextView
            		android:text="@string/key_time_name"
            		android:textColor="@color/white"
            		android:background="@color/blue"
            		android:padding="1dip" />
        		<TextView
            		android:id="@+id/show_log_time_value"
            		android:padding="1dip" />
    		</TableRow>
    		<TableRow>
    			<TextView
    				android:height="3dip" />
    		</TableRow>
			<TableRow>
				<TextView
            		android:text="@string/key_state_name"
            		android:textColor="@color/white"
            		android:background="@color/blue"
            		android:padding="1dip" />
        		<TextView
            		android:id="@+id/show_log_state_value"
            		android:padding="1dip" />
    		</TableRow>
    		<TableRow>
    			<TextView
    				android:height="3dip" />
    		</TableRow>
			<TableRow>
				<TextView
            		android:text="@string/key_type_name"
            		android:textColor="@color/white"
            		android:background="@color/blue"
            		android:padding="1dip" />
        		<TextView
            		android:id="@+id/show_log_type_value"
            		android:padding="1dip" />
    		</TableRow>
    		<TableRow>
    			<TextView
    				android:height="3dip" />
    		</TableRow>
			<TableRow>
				<TextView
            		android:text="@string/key_netid_name"
            		android:textColor="@color/white"
            		android:background="@color/blue"
            		android:padding="1dip" />
        		<TextView
            		android:id="@+id/show_log_netid_value"
            		android:padding="1dip" />
    		</TableRow>
    		<TableRow>
    			<TextView
    				android:height="3dip" />
    		</TableRow>
			<TableRow>
				<TextView
            		android:text="@string/key_speed_name"
            		android:textColor="@color/white"
            		android:background="@color/blue"
            		android:padding="1dip" />
        		<TextView
            		android:id="@+id/show_log_speed_value"
            		android:padding="1dip" />
    		</TableRow>
    		<TableRow>
    			<TextView
    				android:height="3dip" />
    		</TableRow>
			<TableRow>
				<TextView
            		android:text="@string/key_roaming_name"
            		android:textColor="@color/white"
            		android:background="@color/blue"
            		android:padding="1dip" />
        		<TextView
            		android:id="@+id/show_log_roaming_value"
