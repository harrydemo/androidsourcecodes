<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:paddingBottom="4dip" 
  android:paddingLeft="12dip"
  android:paddingRight="12dip">
  
  	<CheckBox 	android:id="@+id/chkHistoryAccountItem"
		  		android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:focusable="false"/>
				
	<ImageView  android:id="@+id/imgHistoryItemType"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"/>	
					
	<TextView 	android:id="@+id/viewHistoryItemDate"
				android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 
   			 	android:textSize="20dip"
   			 	android:layout_toRightOf="@id/imgHistoryItemType"
   			 	android:layout_marginLeft="30dip"
    			android:text="Hello"/>	
    			
    <TextView 	android:id="@+id/viewHistoryItemTypeName"
				android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 	 	
   			 	android:layout_below="@id/viewHistoryItemDate"
   			 	android:layout_alignLeft="@id/viewHistoryItemDate"
   			 	android:layout_marginLeft="30dip"
    			android:text="today type"/>	
    			
    <TextView 	android:id="@+id/viewHistoryItemMoney"
				android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 
   			 	android:layout_centerVertical="true"
   			 	android:layout_toRightOf="@id/viewHistoryItemDate"
   			 	android:layout_marginLeft="40dip"
   			 	android:textSize="20dip"
    			android:text="345"/>	
</RelativeLayout>
