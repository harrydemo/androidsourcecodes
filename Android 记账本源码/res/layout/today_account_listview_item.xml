<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:paddingBottom="4dip" 
	android:paddingLeft="12dip"
	android:paddingRight="12dip">
	<!-- ListView中的item视图中如果有控件，那么会覆盖掉ItemClick事件，所以要设置控件的focusable="false" -->
	<CheckBox 	android:id="@+id/chkTodayAccountItem"
		  		android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:focusable="false"/>

	<ImageView  android:id="@+id/imgItemType"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"/>
				
	<TextView 	android:id="@+id/viewItemTypeName"
				android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 
   			 	android:layout_centerVertical="true"
   			 	android:textSize="15dip"
   			 	android:layout_toRightOf="@id/imgItemType"
   			 	android:layout_marginLeft="10dip"
    			android:text="Hello"/>		
    			
	<TextView 	android:id="@+id/viewItemMoney"
				android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 
   			 	android:layout_centerVertical="true"
   			 	android:textSize="20dip"
   			 	android:layout_toRightOf="@id/viewItemTypeName"
   			 	android:layout_marginLeft="30dip"
    			android:text="Hello"/>
  <!--    			
	<TextView 	android:id="@+id/viewItemDate"
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
				android:layout_below="@id/viewItemType" android:text="date"/>
				
	<TextView 	android:id="@+id/viewItemMoney"
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
				android:layout_toRightOf="@id/viewItemDate" 
				android:layout_alignTop = "@id/viewItemDate"
				android:layout_marginLeft="20dip"
				android:text="25"/>-->
</RelativeLayout>
