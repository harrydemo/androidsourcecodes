<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical">
	<FrameLayout android:id="@+id/FrameLayout01"
		android:layout_height="wrap_content" android:layout_width="fill_parent">
		<LinearLayout android:layout_height="wrap_content"
			android:id="@+id/directory_buttons" android:layout_width="wrap_content"></LinearLayout>
		<LinearLayout android:layout_height="wrap_content"
			android:id="@+id/directory_input" android:layout_width="fill_parent"
			android:orientation="horizontal">

			<Button android:layout_width="wrap_content" android:id="@+id/btn_save"
				android:text="@string/btn_save" android:layout_margin="1dip"
				android:layout_height="40dip" android:width="80dip"></Button>
			<Button android:layout_width="wrap_content"
				android:text="@string/server_disconnect" android:layout_margin="1dip"
				android:layout_height="40dip" android:width="80dip" android:id="@+id/btnDisconnect"></Button>
		</LinearLayout>
	</FrameLayout>

	<FrameLayout android:id="@+id/FrameLayout02"
		android:layout_height="0dip" android:layout_width="fill_parent"
		android:layout_weight="1">
		<com.xmobileapp.cammonitor.CamMonitorView android:id="@+android:id/cmView"
			android:layout_height="fill_parent" android:layout_width="fill_parent"
			android:drawSelectorOnTop="false"/>
	</FrameLayout>

	<ScrollView android:layout_width="fill_parent" android:background="#000000"
		android:layout_height="42dip" android:id="@+id/ScrollViewMessage">
		<TextView android:layout_width="fill_parent" android:id="@+id/Message"
			android:textStyle="normal" android:background="#000000"
			android:textColor="#FFFFFF" android:layout_height="fill_parent"
			android:textSize="11dip" android:layout_marginLeft="1dip"></TextView>
	</ScrollView>
</LinearLayout>
