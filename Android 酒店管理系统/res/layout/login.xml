   </FrameLayout>
 <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="11dip"
    	android:layout_marginRight="11dip"
    	android:layout_marginTop="4dip"
    	android:layout_marginBottom="4dip"
    	android:gravity="center"
    	android:background="@drawable/navigator"
    >
    <TextView
    	android:text="首页" 
    	android:gravity="center"
    	android:textSize="14dip"
    	android:layout_width="68dip" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:background="@drawable/hilight"
	>
	</TextView>
	<TextView
		android:text="用户信息"
		android:gravity="center"
		android:layout_height="wrap_content"
		android:layout_width="68dip"
		android:textSize="14dip"
		android:layout_marginRight="10dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
	>
	</TextView>
	<TextView
		android:text="资源信息"
		android:gravity="center"
		android:layout_height="wrap_content"
		android:layout_width="68dip"
		android:textSize="14dip"
		android:layout_marginRight="10dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
	>
	</TextView>
	<TextView
		android:text="订单查看"
		android:gravity="center"
		android:layout_height="wrap_content"
		android:layout_width="68dip"
		android:textSize="14dip"
		android:layout_marginRight="10dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
	>
	</TextView>
 </LinearLayout>
 <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:orientation="vertical"
      android:gravity="center_horizontal"
      android:background="@color/yellow"
>
  <LinearLayout 
      android:id="@+id/loginLinearLayout01" 
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="30dip"
      android:gravity="center"
>
    <TextView 
      android:text="用户名"
      android:layout_marginLeft="11dip"
      android:textSize="20dip" 
      android:id="@+id/loginTextView01" 
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:textColor="#000000">
    </TextView>
    <EditText 
      android:text="" 
      android:id="@+id/loginEditText01" 
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:width="180dip"
      android:textColor="#000000">
    </EditText>
  </LinearLayout>
  <LinearLayout 
      android:id="@+id/loginLinearLayout02" 
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center">
    <TextView 
       android:text="密    码" 
       android:textSize="20dip" 
       android:id="@+id/loginTextView02" 
       android:layout_marginLeft="11dip"
       android:layout_width="wrap_content" 
       android:layout_height="wrap_content"
       android:gravity="center_horizontal"
       android:textColor="#000000">
    </TextView>
    <EditText 
       android:text="" 
       android:id="@+id/loginEditText02" 
       android:layout_width="wrap_content" 
       android:layout_height="wrap_content"
       android:password="true"
       android:width="180dip">
    </EditText>
   </LinearLayout>
   <AbsoluteLayout
       android:id="@+id/loginLinearLayout03"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
    <Button 
       android:text="登录" 
       android:id="@+id/loginButton01" 
       android:textSize="20dip"
       android:layout_x="40dip" 
       android:layout_y="0dip"
       android:layout_width="wrap_content" 
       android:layout_height="45dip"
       android:gravity="left">
    </Button>
    <Button 
       android:text="注册"
       android:textSize="20dip"
       android:layout_x="120dip" 
       android:layout_y="0dip" 
       android:id="@+id/loginButton02" 
       android:layout_width="wrap_content"
       android:layout_height="45dip"
       android:gravity="right">
     </Button>
   </AbsoluteLayout>
   <LinearLayout 
   android:layout_marginTop="30dip"
   android:layout_marginLeft="7dip"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <com.bn.summer.GGView1
      android:layout_width="300dip" 
      android:layout_height="180dip" 
   />
   </LinearLayout>
</LinearLayout>
</LinearLayout>
