<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffcc"
    >
     <FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:background="@drawable/title"
   >
    <TextView
    	android:text="欢迎光临夏日酒店"
    	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="0dip"
		android:layout_marginBottom="0dip"
		android:layout_marginLeft="0dip"
		android:textSize="20dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:gravity="center"
    >
    </TextView> 
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|right">
        <ImageButton
            android:id="@+id/resourcedetailImageButton01"
            android:background="@drawable/next_button"
            android:layout_width="40dip"
            android:layout_height="30dip"
            android:layout_marginTop="0dip"
            android:layout_marginRight="15dip">
        </ImageButton>
    </LinearLayout>
    <LinearLayout
         android:orientation="horizontal"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:gravity="center_vertical|left">
         <ImageButton 
             android:id="@+id/resourcedetailImageButton02"
             android:background="@drawable/before_button"
             android:layout_width="40dip"
             android:layout_height="30dip"
             android:layout_marginTop="0dip"
             android:layout_marginLeft="15dip">
         </ImageButton>
    </LinearLayout>
   </FrameLayout>
 <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="11dip"
    	android:layout_marginRight="11dip"
    	android:layout_marginTop="4dip"
    	android:layout_marginBottom="4dip"
    	android:gravity="center"
    	android:background="@drawable/navigator"
    >
    <TextView
    	android:text="首页" 
    	android:gravity="center"
    	android:textSize="14dip"
    	android:layout_width="68dip" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
	>
	</TextView>
	<TextView
		android:text="用户信息"
		android:gravity="center"
		android:layout_height="wrap_content"
		android:layout_width="68dip"
		android:textSize="14dip"
		android:layout_marginRight="10dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
	>
	</TextView>
	<TextView
		android:text="资源信息"
		android:gravity="center"
		android:layout_height="wrap_content"
		android:layout_width="68dip"
		android:textSize="14dip"
		android:layout_marginRight="10dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:background="@drawable/hilight"
	>
	</TextView>
	<TextView
		android:text="订单查看"
		android:gravity="center"
		android:layout_height="wrap_content"
		android:layout_width="68dip"
		android:textSize="14dip"
		android:layout_marginRight="10dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
	>
	</TextView>
 </LinearLayout> 
 <LinearLayout 
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="wrap_content">
<LinearLayout 
android:orientation="horizontal"
android:id="@+id/resourcedetailLinearLayout01" 
android:layout_width="fill_parent" 
android:layout_height="wrap_content"
android:background="@color/yellow">
<TextView  
android:layout_marginLeft="11dip"
android:text="房  间  号："
android:textSize="20dip"
android:textColor="@color/black"
android:layout_width="wrap_content" 
android:layout_height="wrap_content">
</TextView>
<TextView
android:textSize="20dip"
android:textColor="@color/black"
android:id="@+id/resourcedetailTextView01"
android:layout_width="wrap_content" 
android:layout_height="wrap_content">
</TextView>
</LinearLayout>
<LinearLayout
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:background="@color/yellow">
<ScrollView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_marginLeft="11dip">
<TextView 
android:textSize="20dip"
android:gravity="left"
android:textColor="@color/black"
android:id="@+id/resourcedetailTextView02" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content">
</TextView>
</ScrollView>
</LinearLayout>
<LinearLayout
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:background="@color/yellow">
<ScrollView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_marginLeft="11dip">
<TextView 
android:textSize="20dip"
android:gravity="left"
android:textColor="@color/black"
android:id="@+id/resourcedetailTextView03" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content">
</TextView>
</ScrollView>
</LinearLayout>
<LinearLayout 
android:layout_marginTop="4dip"
android:background="@color/yellow"
android:orientation="vertical"
android:layout_width="fill_parent" 
android:layout_height="wrap_content">
<LinearLayout 
android:orientation="horizontal"
android:id="@+id/resourcedetailLinearLayout03" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content">
<TextView 
android:layout_marginLeft="11dip"
android:text="起始时间：" 
android:textSize="20dip"
android:textColor="@color/black"
android:gravity="center"
android:layout_width="wrap_content" 
android:layout_height="wrap_content">
</TextView>
<TextView 
android:textSize="20dip"
android:textColor="@color/black"
android:id="@+id/resouredetailEditText01" 
android:layout_width="120dip" 
android:text="点击设置时间"
android:layout_height="wrap_content"
android:background="@drawable/text"
/>
</LinearLayout>
<LinearLayout 
android:orientation="horizontal"
android:id="@+id/resourcedetailLinearLayout04" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content"
android:layout_marginTop="10dip"
>
<TextView
android:layout_marginLeft="11dip" 
android:text="结束时间：" 
android:textColor="@color/black"
android:textSize="20dip"
android:gravity="center"
android:layout_width="wrap_content" 
android:layout_height="wrap_content">
</TextView>
<TextView 
android:textSize="20dip"
android:textColor="@color/black"
android:id="@+id/resouredetailEditText02" 
android:layout_width="120dip" 
android:layout_height="wrap_content"
android:text="点击设置时间"
android:background="@drawable/text"
>
</TextView>
</LinearLayout>
</LinearLayout>
</LinearLayout>
<LinearLayout 
android:orientation="horizontal"
android:layout_width="wrap_content" 
android:layout_height="wrap_content">
<Button 
android:text="预定" 
android:textSize="20dip"
android:id="@+id/resouredetailButton01" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content"
android:layout_marginLeft="11dip">
</Button>
</LinearLayout>
</LinearLayout>