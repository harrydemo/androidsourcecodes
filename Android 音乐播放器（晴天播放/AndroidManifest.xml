<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.androidmediaplayer" android:versionCode="1"
	android:versionName="1.0">

	<application android:name=".constant.ConstantExtendsApplication"
		android:icon="@drawable/appwidget_played" android:label="@string/app_name">
		<activity android:name=".mp3player.MainActivity" android:launchMode="singleTask"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".mp3player.RemoteMp3ListActivity" android:launchMode="singleTask"
			android:label="@string/app_name" />
		<activity android:name=".mp3player.LocalMp3ListActivity" android:launchMode="singleTask"
			android:label="@string/app_name" />
		<activity android:name=".mp3player.MyPlayerActivity" android:launchMode="singleTask"
			android:label="@string/app_name" />
		<activity android:name=".mp3player.PlayListActivity" android:launchMode="singleTask"
			android:label="@string/app_name"  />
		<service android:name=".mp3player.service.DownloadService" />
		<service android:name=".mp3player.service.ScanService" />
		<service android:name=".mp3player.MediaPlayerService" >
			<intent-filter>
	    		<!-- AIDL完整路径名。必须指明，客户端能够通过AIDL类名查找到它的实现类 -->
	    		<action android:name="com.androidmediaplayer.mp3player.IMediaPlayerService" />
    		</intent-filter>
		</service>
	</application>

	<uses-sdk android:minSdkVersion="8" />
	<!-- 在SDCard中创建与删除文件权限 -->
	<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>
	<uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
	
</manifest>