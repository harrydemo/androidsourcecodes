<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<ImageView android:id="@+id/image" android:layout_width="wrap_content"
		android:layout_height="fill_parent" />

	<LinearLayout android:orientation="vertical"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:layout_marginLeft="5dip">

		<LinearLayout android:orientation="horizontal"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginLeft="5dip">

			<TextView android:id="@+id/notname" android:layout_width="wrap_content"
				android:textColor="#000000" android:layout_height="wrap_content"
				android:layout_marginTop="9dip" />
			<TextView android:id="@+id/notartistname" android:textColor="#000000"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginTop="9dip" android:layout_marginLeft="15dip" />
		</LinearLayout>

		<ProgressBar android:id="@+id/pb" android:layout_width="200dip"
			android:layout_height="20dip" style="?android:attr/progressBarStyleHorizontal"
			android:layout_gravity="center_vertical" android:layout_marginTop="5dip" />

	</LinearLayout>

	<TextView android:id="@+id/tv" android:layout_width="wrap_content"
		android:textColor="#000000" android:layout_marginLeft="10dip"
		android:layout_height="fill_parent" android:layout_marginTop="32dip" />

</LinearLayout>