<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
<ListView
        android:id="@+id/list_dialog_list"
        android:layout_centerInParent="true"
        android:background="@drawable/bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
	<RelativeLayout
     	android:id="@+id/layout_dialog_newname"
        android:layout_centerInParent="true"
        android:background="@drawable/bg"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/text_dialog_newname"
	        android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_margin="5sp"
        	android:textColor="#000000"
        	android:text="新名字"
        	
            />
	    <EditText 
	        android:id="@+id/edit_dialog_newname"
	        android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_below="@+id/text_dialog_newname"
        	android:layout_margin="5sp"
	        />
	    <Button 
	        android:id="@+id/button_dialog_finish"
	        android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentLeft="true"
        	android:layout_margin="5sp"
        	android:text="完成"
        	android:layout_below="@+id/edit_dialog_newname"
	        />
	    
	    <Button 
	        android:id="@+id/button_dialog_cansel"
	        android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentRight="true"
        	android:layout_margin="5sp"
        	android:layout_below="@+id/edit_dialog_newname"
        	android:text="取消"
	        />
    
    </RelativeLayout>

</RelativeLayout>

