<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center">


	<Button android:id="@+id/btn_mode_100s" android:text="100Seconds"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:gravity="center" />

	<TextView android:text="@string/tv_mode_100s"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center" android:textColor="#fff" />


	<Button android:id="@+id/btn_mode_100c" android:text="100Counts"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:gravity="center" />

	<TextView android:text="@string/tv_mode_100c"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center" android:textColor="#fff" />
</LinearLayout>
