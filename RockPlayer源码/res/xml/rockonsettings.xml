<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory 
    		android:title="@string/settings_category_general"
            android:key="parent">

        <CheckBoxPreference
                android:key="show_icon"
                android:title="@string/settings_show_icon"
                android:summary="@string/settings_show_icon_summary"
                android:persistent="false" />

    </PreferenceCategory>

   <PreferenceCategory 
    		android:title="@string/settings_category_playlist"
            android:key="playlist">
	
	    <Preference
	            android:key="recent_period"
	            android:title="@string/settings_recent_period"
	            android:summary="@string/settings_recent_period_summary"
	            android:persistent="false" />   
	</PreferenceCategory>
	                             
