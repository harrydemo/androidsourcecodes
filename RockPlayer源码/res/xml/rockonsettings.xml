    <PreferenceCategory 
    		android:title="@string/settings_category_lastfm_scrobbling"
            android:key="parent">

        <CheckBoxPreference
                android:key="scrobble_droid"
                android:title="@string/settings_scrobble_droid"
                android:summary="@string/settings_scrobble_droid_summary"
                android:persistent="false" />

    </PreferenceCategory>

    <PreferenceCategory 
    		android:title="@string/settings_category_look_and_feel"
            android:key="parent">

        <CheckBoxPreference
                android:key="show_art_while_scrolling"
                android:title="@string/settings_show_art_while_scrolling"
                android:summary="@string/settings_show_art_while_scrolling_summary"
                android:persistent="false" />
		<CheckBoxPreference
                android:key="show_frame"
                android:title="@string/settings_show_frame"
                android:summary="@string/settings_show_frame_summary"
                android:persistent="false" />
		<CheckBoxPreference
                android:key="always_landscape"
                android:title="@string/settings_always_landscape"
                android:summary="@string/settings_always_landscape_summary"
                android:persistent="false" />
		<CheckBoxPreference
                android:key="auto_rotate"
                android:title="@string/settings_auto_rotate"
                android:summary="@string/settings_auto_rotate_summary"
                android:persistent="false" />
		<CheckBoxPreference
                android:key="custom_background"
                android:title="@string/settings_custom_background"
                android:summary="@string/settings_custom_background_summary"
                android:persistent="false" />
			<Preference
	                android:key="custom_background_portrait"
	                android:title="@string/settings_custom_background_portrait"
	                android:summary="@string/settings_custom_background_portrait_summary"
	                android:dependency="custom_background"
	                android:persistent="false" />
			<Preference
	                android:key="custom_background_landscape"
	                android:title="@string/settings_custom_background_landscape"
	                android:summary="@string/settings_custom_background_landscape_summary"
	                android:dependency="custom_background"
	                android:persistent="false" />

    </PreferenceCategory>	

</PreferenceScreen>