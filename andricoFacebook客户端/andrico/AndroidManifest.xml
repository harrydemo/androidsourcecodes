<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.andrico.andrico"
      android:versionCode="1" android:versionName="1.0">
        
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".Synchronize"
        		  android:label="@string/synchronize">
        </activity>
        
        <activity android:name=".SettingsActivity"
        		  android:label="@string/settings">
        </activity>
        
        <activity android:name=".ContactList"
        		  android:label="@string/contacts">
        </activity>
        
        <activity android:name=".ContactInfo"
        		  android:label="@string/contact_info">
        </activity>
        
        <activity
			android:name=".WebActivity"
			android:label="@string/loading_page"
			
			android:configChanges="keyboardHidden|orientation">
		</activity>
        
        <activity
			android:name=".facebook.LoginActivity"
			android:label="@string/login_label"
			
			android:configChanges="keyboardHidden|orientation">
		</activity>

				
    </application>
    
    <uses-library android:name="com.google.android.maps"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    
</manifest> 