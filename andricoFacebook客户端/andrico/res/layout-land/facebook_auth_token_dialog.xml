<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:gravity="fill_vertical" android:layout_marginLeft="30px" android:minHeight="200px" android:layout_width="wrap_content" android:layout_height="wrap_content">

	<TextView
		android:id="@+id/auth_token_label"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip"
		android:gravity="fill_vertical"
		android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/token_headline" android:layout_marginTop="15px"/>

	<EditText
		android:id="@+id/auth_token"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:autoText="false"
		android:capitalize="none"
		android:gravity="right"
		android:lines="1"
		android:singleLine="true"
		android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginLeft="80dip"/>

	<TextView
		android:id="@+id/auth_token_label"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip"
		android:gravity="fill_vertical"
		android:textAppearance="?android:attr/textAppearanceSmall" android:text="@string/token_text" android:layout_marginTop="15px"/>
		
	


	<TextView
		android:id="@+id/auth_token_spacer"
		android:layout_height="120dip"
		android:layout_width="wrap_content"
		android:gravity="fill_vertical" />

</LinearLayout>
