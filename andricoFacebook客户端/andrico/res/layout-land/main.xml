 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#30567D">
<LinearLayout android:id="@+id/MainLayout" 
	android:orientation="vertical"
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent">
	<LinearLayout android:id="@+id/LayoutForLogo" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_gravity="center" android:layout_width="fill_parent" android:gravity="center">
			<ImageView android:id="@+id/Logo" 
				android:layout_height="wrap_content" 
				android:src="@drawable/logo_land" 
				android:layout_gravity="center" 
				android:layout_width="wrap_content" 
				android:layout_margin="5px"></ImageView>
		</LinearLayout>
	<LinearLayout android:orientation="vertical" android:id="@+id/LayoutForButtons" android:layout_width="fill_parent" android:gravity="center" android:layout_marginRight="10px" android:background="@drawable/back_land" android:layout_marginLeft="10px" android:layout_height="fill_parent" android:minHeight="240px">
<Button android:id="@+id/ViewContacts" android:width="300px" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/view_contacts" android:layout_marginLeft="7px" android:layout_marginRight="7px" android:layout_marginTop="5px" android:height="55px" android:textStyle="bold" android:textSize="20px" android:drawableLeft="@android:drawable/ic_menu_my_calendar"></Button>
<Button android:id="@+id/Synchronize" android:layout_height="wrap_content" android:width="300px" android:layout_width="fill_parent" android:text="@string/synchronize" android:layout_marginLeft="7px" android:layout_marginRight="7px" android:height="55px" android:layout_marginTop="1px" android:textStyle="bold" android:textSize="20px" android:drawableLeft="@drawable/ic_synch"></Button>
<Button android:id="@+id/Settings" android:layout_height="wrap_content" android:layout_width="fill_parent" android:width="300px" android:text="@string/settings" android:layout_marginLeft="7px" android:layout_marginRight="7px" android:height="55px" android:layout_marginTop="1px" android:textStyle="bold" android:textSize="20px" android:drawableLeft="@android:drawable/ic_menu_preferences"></Button><Button android:id="@+id/Exit" android:layout_height="wrap_content" android:width="300px" android:layout_width="fill_parent" android:text="@string/exit" android:layout_marginLeft="7px" android:layout_marginRight="7px" android:height="55px" android:layout_marginTop="1px" android:textStyle="bold" android:textSize="20px" android:drawableLeft="@drawable/ic_exit"></Button></LinearLayout>
</LinearLayout>

</ScrollView>
