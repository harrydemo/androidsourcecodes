<!-- This selector is for the clock tab, in wich, we indicate the pics to
use for selected tab or no selected -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- When the tab is selected use the grey pic (note: the png file names
	haven't write with the file extension ie: .png ) -->
	<item android:drawable="@drawable/schedule_tab_up"
		android:state_selected="true" />

	<!-- When the tab isn't selected use the non-complete grey pic -->
	<item android:drawable="@drawable/schedule_tab_down" />			

</selector>