<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.imhere.android.view.VerticalScrollView
        android:id="@+id/mScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/lay_NewestInformation"
                android:layout_width="fill_parent"
                android:layout_height="200dp" >

                <com.imhere.android.view.DiscoverInfiniteLoopViewPager
                    android:id="@+id/viewpager_Information"
                    android:layout_width="fill_parent"
                    android:background="#f0f2f2"
                    android:layout_height="fill_parent" />
            </LinearLayout>

            <com.imhere.android.view.NoScrollListView
                android:id="@+id/listview_classify"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" />
        </LinearLayout>
    </com.imhere.android.view.VerticalScrollView>

</LinearLayout>