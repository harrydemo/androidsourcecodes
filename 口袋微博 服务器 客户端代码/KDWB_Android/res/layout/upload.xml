<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@drawable/back"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		>
		<TextView
			android:text="@string/tvChooseAlbum"
			style="@style/text"
			android:layout_width="80px"
			android:layout_height="wrap_content"
			/>
		<Spinner
			android:id="@+id/AlbumSpinner"
			android:layout_width="130px"
			android:layout_height="wrap_content"
			/>
		<Button
			android:id="@+id/btnNewAlbum"
			style="@style/button"
			android:text="@string/btnNewAlbum"
			android:layout_width="110px"
			android:layout_height="wrap_content"
			/>
		</LinearLayout>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		>
		<TextView 
			android:id="@+id/tvPhotoName"
			style="@style/text"
			android:text="@string/tvPhotoName"
			android:layout_width="100px"
			android:layout_height="wrap_content"
			/>
		<EditText
			android:id="@+id/etPhotoName"
			android:layout_width="150px"
			android:layout_height="wrap_content"
			/>
		</LinearLayout>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		>
		<TextView 
			android:id="@+id/tvPhotoDes"
			style="@style/text"
			android:text="@string/tvPhotoDes"
			android:layout_width="100px"
			android:layout_height="wrap_content"
			/>
		<EditText
			android:id="@+id/etPhotoDes"
			android:layout_width="150px"
			android:layout_height="wrap_content"
			/>
		</LinearLayout>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		>
		<Button
			android:id="@+id/btnConfirmUpload"
			style="@style/button"
			android:text="@string/btnUploadPhoto"
			android:layout_width="120px"
			android:layout_height="wrap_content"
			/>
		<Button
			android:id="@+id/btnUploadBack"
			style="@style/button"
			android:text="@string/btnBack"
			android:layout_width="100px"
			android:layout_height="wrap_content"
			/>
		</LinearLayout>
	</LinearLayout>
