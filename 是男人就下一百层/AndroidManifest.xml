<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.void1898.www.agilebuddy" android:versionCode="8"
	android:versionName="1.3.3">
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name="org.void1898.www.agilebuddy.Splash"
			android:label="@string/app_name" android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".AgileBuddyActivity" android:label="@string/app_name"
			android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation">
		</activity>
		<activity android:name=".Prefs" android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation"
			android:windowSoftInputMode="stateHidden|adjustResize">
		</activity>
		<activity android:name=".GlobalRankingActivity"
			android:label="@string/global_ranking" android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation">
		</activity>
		<activity android:name=".TipsActivity" android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation"
			android:windowSoftInputMode="stateHidden|adjustResize">
		</activity>

		<service android:name="org.void1898.www.agilebuddy.ScoreUpgrateService">
		</service>

		<!-- The application's publisher ID assigned by AdMob -->
		<meta-data android:value="a14b7e821a7d353" android:name="ADMOB_PUBLISHER_ID" />
	</application>

	<uses-sdk android:minSdkVersion="3" />
	<uses-permission android:name="android.permission.VIBRATE"></uses-permission>
	<uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
	<!-- AdMob SDK permissions -->
	<uses-permission android:name="android.permission.INTERNET" />
</manifest> 