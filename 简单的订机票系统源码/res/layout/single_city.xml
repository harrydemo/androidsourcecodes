    android:layout_marginLeft="20dip"
    android:layout_height="wrap_content"   
    android:orientation="vertical" >
    <TextView
    android:id="@+id/listview3"
    android:text="3"
    android:textSize="18sp"
    android:textColor="#436EEE"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
