<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/weibo_detail"
    android:layout_width="fill_parent"    android:layout_height="fill_parent"
    android:background="#fafafa"  android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"  android:layout_height="wrap_content"
        android:background="@drawable/top_bg" >
        <ImageButton
            android:id="@+id/detail_back"
            android:layout_width="50dip"  android:layout_height="39dip"
            android:layout_alignParentLeft="true"   android:background="@drawable/top_back"
            android:clickable="true"   android:focusable="true" />
        <TextView
            android:id="@+id/today_title"
            android:layout_width="wrap_content"    android:layout_height="wrap_content"
            android:layout_centerInParent="true"   android:layout_toRightOf="@+id/img_back"
            android:text="慢品幻灯片"  android:textColor="#e9e9e9"
            android:textSize="18sp" >
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"  android:layout_height="wrap_content" 	android:background="#333">
	    <android.support.v4.view.ViewPager
            android:id="@+id/detail_viewpager"	android:background="@null"
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:layout_above="@+id/detail_adview"/>
        <ProgressBar
	        android:id="@+id/detail_progress"   style="@style/animStyle"
	        android:layout_width="23dip"  android:layout_height="23dip"
	         android:layout_centerInParent="true"  android:layout_above="@+id/detail_adview" />
	         
	         	    
	      <LinearLayout
            android:id="@+id/detail_adview"
            android:layout_width="fill_parent"  android:layout_height="wrap_content"
            android:layout_above="@+id/detail_linearlayout_bottom" >
            
            </LinearLayout>
        <LinearLayout
            android:id="@+id/detail_linearlayout_bottom"	android:paddingTop="6dip"
            android:layout_width="fill_parent"  android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"  android:background="@drawable/btm_bg" >
            <LinearLayout
                android:id="@+id/d_refresh"
                android:layout_width="fill_parent"   android:layout_height="fill_parent"
                android:layout_weight="1"  android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"  android:layout_height="wrap_content"
                    android:background="@drawable/detail_btm_refresh" />
                <TextView
                    android:layout_width="wrap_content"  android:layout_height="wrap_content"
                    android:text="刷新" android:textSize="12dip"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/d_comment"
                android:layout_width="fill_parent"  android:layout_height="fill_parent"
                android:layout_weight="1"    android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"  android:layout_height="wrap_content"
                    android:background="@drawable/detail_btm_comment" />
                <TextView
                    android:layout_width="wrap_content"  android:layout_height="wrap_content"
                    android:text="评论"  android:textSize="12dip"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/d_forward"
                android:layout_width="fill_parent"    android:layout_height="fill_parent"
                android:layout_weight="1"   android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"  android:layout_height="wrap_content"
                    android:background="@drawable/detail_btm_forward" />
                <TextView
                    android:layout_width="wrap_content"   android:layout_height="wrap_content"
                    android:text="转发"  android:textSize="12dip"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/d_collect"
                android:layout_width="fill_parent"   android:layout_height="fill_parent"
                android:layout_weight="1"    android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"  android:layout_height="wrap_content"
                    android:background="@drawable/detail_btm_collect" />
                <TextView
                    android:layout_width="wrap_content"   android:layout_height="wrap_content"
                    android:text="收藏"  android:textSize="12dip"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/d_more"
                android:layout_width="fill_parent"   android:layout_height="fill_parent"
                android:layout_weight="1"  android:gravity="center"
                android:orientation="vertical" >
                <ImageView
                    android:layout_width="wrap_content"   android:layout_height="wrap_content"
                    android:background="@drawable/detail_btm_more" />
                <TextView
                    android:layout_width="wrap_content"   android:layout_height="wrap_content"
                    android:text="更 多"  android:textSize="12dip"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>