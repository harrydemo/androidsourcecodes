<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_foot" android:layout_width="fill_parent"
	android:layout_height="60dip"	android:background="@null">
	<TextView android:textSize="16.0dip" android:textColor="#dbef6f"
		android:id="@+id/more" android:layout_width="fill_parent"	android:layout_height="60dip"
		android:text="再来点..." android:gravity="center"/>
	<RelativeLayout 
		android:id="@+id/loading" android:layout_width="fill_parent"
		android:layout_height="60dip" android:visibility="gone">
		<LinearLayout  android:orientation="horizontal"
			android:layout_width="wrap_content"	android:layout_centerInParent="true"
			android:layout_height="wrap_content">
			<ProgressBar
				android:id="@+id/footprogress" android:layout_width="23dip"
				android:layout_height="23dip" android:indeterminateBehavior="repeat"
				style="@style/animStyle" />
			<TextView android:textColor="#dbef6f" android:paddingLeft="5dip"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="正在努力的为您加载中" android:textSize="16dip"/>
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>