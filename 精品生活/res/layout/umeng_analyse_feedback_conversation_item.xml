<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:id="@+id/umeng_analyse_atomLinearLayout" android:orientation="horizontal"
	android:background="#EFEFEF">
	<View android:id="@+id/umeng_analyse_atom_left_margin"
		android:layout_width="50dip" android:layout_height="wrap_content"
		android:layout_weight="1" />
	<RelativeLayout android:id="@+id/umeng_analyse_bubble"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginTop="6dip" android:background="@drawable/umeng_analyse_user_bubble"
		android:layout_marginBottom="3dip" android:layout_weight="1">
		<TextView android:id="@+id/umeng_analyse_atomtxt"
			android:layout_marginLeft="10dip" android:layout_marginRight="5dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="18dip" android:textColor="#6F6F6F" android:text="This is Content" />
		<TextView android:id="@+id/umeng_analyse_stateOrTime"
			android:layout_marginLeft="10dip" android:layout_marginRight="5dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="12dip" android:text="This is State or Send Time"
			android:textColor="#BDBDBD" android:layout_marginTop="7dip"
			android:layout_below="@id/umeng_analyse_atomtxt" />
	</RelativeLayout>
	<View android:id="@+id/umeng_analyse_atom_right_margin"
		android:layout_width="50dip" android:layout_height="wrap_content"
		android:layout_weight="1" />
</LinearLayout>